<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.GameSetupController" stylesheets="@game-setup.css">
    <top>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="game-title" text="MAZE ADVENTURE SETUP" />
                <Label styleClass="subtitle" text="Configure your maze experience!" />
            </children>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
            <children>

                <!-- Maze Size Selection -->
                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label styleClass="section-title" text="MAZE DIMENSIONS" />
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label styleClass="input-label" text="Rows:" />
                                        <TextField fx:id="rowsField" promptText="15" styleClass="dimension-field" text="15" />
                                    </children>
                                </VBox>
                                <Label styleClass="dimension-separator" text="x" />
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label styleClass="input-label" text="Columns:" />
                                        <TextField fx:id="columnsField" promptText="15" styleClass="dimension-field" text="15" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Difficulty Selection -->
                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label styleClass="section-title" text="DIFFICULTY LEVEL" />
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <ToggleButton fx:id="easyBtn" styleClass="difficulty-btn, easy-btn" text="EASY" toggleGroup="$difficulty" />
                                <ToggleButton fx:id="mediumBtn" styleClass="difficulty-btn, medium-btn" text="MEDIUM" toggleGroup="$difficulty" selected="true" />
                                <ToggleButton fx:id="hardBtn" styleClass="difficulty-btn, hard-btn" text="HARD" toggleGroup="$difficulty" />
                                <ToggleButton fx:id="expertBtn" styleClass="difficulty-btn, expert-btn" text="EXPERT" toggleGroup="$difficulty" />
                            </children>
                        </HBox>
                        <Label styleClass="difficulty-desc" fx:id="difficultyDescription" text="Balanced challenge for most players" />
                    </children>
                </VBox>

                <!-- Algorithm Selection -->
                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label styleClass="section-title" text="ALGORITHM SETTINGS" />
                        <GridPane alignment="CENTER" hgap="20.0" vgap="15.0" styleClass="algorithm-grid">
                            <children>
                                <Label text="Maze Generator:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="setting-label" />
                                <ComboBox fx:id="mazeGeneratorCombo" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="setting-combo" />

                                <Label text="Search Algorithm:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="setting-label" />
                                <ComboBox fx:id="searchAlgorithmCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="setting-combo" />
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="150.0" />
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                            </columnConstraints>
                        </GridPane>
                    </children>
                </VBox>

                <!-- Game Features -->
                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label styleClass="section-title" text="GAME FEATURES" />
                        <HBox alignment="CENTER" spacing="30.0">
                            <children>
                                <CheckBox fx:id="soundEffectsCheck" selected="true" text="Sound Effects" styleClass="feature-checkbox" />
                                <CheckBox fx:id="showHintsCheck" text="Show Hints" styleClass="feature-checkbox" />
                                <CheckBox fx:id="showTimerCheck" selected="true" text="Show Timer" styleClass="feature-checkbox" />
                                <CheckBox fx:id="animationsCheck" selected="true" text="Animations" styleClass="feature-checkbox" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="startGameBtn" onAction="#startGame" styleClass="action-btn, start-btn" text="START ADVENTURE" />
                <Button fx:id="resetBtn" onAction="#resetToDefaults" styleClass="action-btn, reset-btn" text="RESET TO DEFAULTS" />
                <Button fx:id="backBtn" onAction="#goBack" styleClass="action-btn, back-btn" text="BACK TO MENU" />
            </children>
        </HBox>
    </bottom>
</BorderPane>